article.card
  - if ad.image_name
    img.card-image src="/userimg/#{ad.image_name}" alt="Bild på #{ad.title}"
  div.card-indent
    header
      div.card-title
        h1 = ad.title
        span.price = get_human_readable_price(ad.price)
      p.seller-info
        | säljs av 
        a href="/user/#{ad.seller.id}" = ad.seller.name
        |  · #{ad_position(ad)}
    section.description
      - ad.content.split("\n").each do |paragraph|
        p = paragraph
    - unless ad.tags.empty?
      section.tags
        p.bold Taggar
        == slim :'partials/tag-list', locals: { tags: ad.tags }
    - if ad.seller == current_user || current_user&.admin
      form action="/ad/#{ad.id}/delete" method="post"
        - if ad.seller == current_user
          a.button href="/ad/#{ad.id}/edit" Redigera annons
        input.destructive type="submit" value="Ta bort annons"
    - unless ad.seller == current_user
      a.button.full-width.message-icon-prefix href="/message/#{ad.id}" Skicka meddelande
