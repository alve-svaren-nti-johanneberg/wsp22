article.card
  form action="/ad/new" method="post"
    / img src="/userimg/#{ad.image_id}" alt="Bild p√• #{ad.title}"
    div.card-indent
      p.error = temp_session :form_error
      header
        div
          input.flat type="text" placeholder="Ange titel" name="title"
          input.flat type="number" oninput="this.reportValidity()" min="0" placeholder="Pris (i kr)" name="price"
        input.flat type="text" pattern="\d{5}" placeholder="Ange postnummer" name="postal_code"

      textarea.flat name="content" placeholder="Beskrivning av vara"

      input.full-width type="submit" value="Skapa annons"
